<!DOCTYPE html>
<html>
<head>
  <title>Splittr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<nav>
  <%= link_to 'Home', root_path %> |
  <%= link_to 'Bills', bills_path %> |
  <%= link_to 'Users', users_path %> |
  <%= link_to 'Login', login_path unless @current_user %>
  <%= link_to 'Logout', logout_path, method: :delete if @current_user %>
</nav>
<p>
  Session[:cart_id]: [<%= link_to session[:cart_id], cart_path(@current_cart) if @current_cart %>] |
  Session[:user_id]: [<%= link_to session[:user_id], user_path(@current_user) if @current_user %>]
</p>

<div id="app">
  <%= yield %>
</div>

</body>
</html>
